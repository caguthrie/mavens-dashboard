<%= link_to 'Back to Main Menu', root_path %>

<br/>
<br/>

<div>
  <div class="left-header-table-container">
    <table>
      <thead>
      <tr>
        <th>&nbsp;</th>
      </tr>
      </thead>
      <tbody>
      <% @rows.each do |row| %>
        <tr>
          <td><%= row['player'].real_name %> (<%= row['player'].username %>)</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="right-header-table-container">
    <table>
      <thead>
      <tr>
        <% @headers.each do |header| %>
          <th><%= header.strftime('%Y') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @rows.each do |row| %>
        <tr>
          <% @headers.each do |header| %>
            <td class="<%= row[header.strftime('%Y')]['amount'] > 0 ? 'green-bg' : (row[header.strftime('%Y')]['amount'] < 0 ? 'red-bg' : '') %>"><%= row[header.strftime('%Y')]['amount'] %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div>&nbsp;</div>
